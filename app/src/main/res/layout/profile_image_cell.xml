<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <ImageView
        android:id="@+id/profileImageCell"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/someProfileUserImage"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userNicknameImgCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/profileImageCellTxtSize"
        android:textColor="@color/profileImageCellTxtColor"
        app:layout_anchor="@+id/profileImageCell"
        app:layout_anchorGravity="bottom|end"/>

    <ImageView
        android:id="@+id/isOnline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/online"
        app:layout_anchor="@id/profileImageCell"
        app:layout_anchorGravity="top|left"/>


</android.support.design.widget.CoordinatorLayout>